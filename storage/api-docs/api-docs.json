{
    "swagger": "2.0",
    "info": {
        "title": "TenSendMe Swagger API",
        "description": "TenSendMe Swagger API description",
        "contact": {
            "email": "tenSendMe@gmail.com"
        },
        "version": "2.0.0"
    },
    "host": "tensendme.edu-elt.kz",
    "basePath": "/api/v1/",
    "schemes": [
        "http",
        "https"
    ],
    "paths": {
        "/login": {
            "post": {
                "description": "Login by login and password to get token and etc",
                "parameters": [
                    {
                        "name": "email and password",
                        "in": "body",
                        "description": "Login user(phone) or email and password",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        },
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Invalid login or password"
                    }
                }
            }
        },
        "/code/send": {
            "post": {
                "description": "Send code to user",
                "parameters": [
                    {
                        "name": "phone",
                        "in": "body",
                        "description": "Login user(phone) or email ",
                        "schema": {
                            "$ref": "#/definitions/Code"
                        },
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/code/check": {
            "post": {
                "description": "Check the code",
                "parameters": [
                    {
                        "name": "phone and code",
                        "in": "body",
                        "description": "Login user(phone) or email ",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Code"
                        },
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
       "/categories": {
           "get":{
               "description": "Information About all category",
               "responses": {
                   "200": {
                       "description": "OK"
                   }
               }

           }
       },
            
        "/me": {
            "post": {
                "description": "Get user info by token",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },


    },

    "definitions": {
        "Code": {
            "required": [
                "phone",
                "code"
            ],
            "properties": {
                "id": {
                    "description": "UUID",
                    "type": "integer"
                },
                "phone": {
                    "type": "string"
                },
                "code": {
                    "type": "string"
                }
            }
        },
        "Category":{
            "properties": {
                "id": {
                    "description": "UUID",
                    "type": "integer"
                },
                "name":{
                    "type":"string"
                },
                "category_type_id":{
                    "type": "integer"
                },
                "parent_category_id": {
                    "type": "integer"
                }
            }
            },
        "User": {
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "id": {
                    "description": "UUID",
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "nickname": {
                    "type": "string"
                },
                "device_token": {
                    "type": "string"
                },
                "promo_code": {
                    "type": "string"
                },
                "role_id": {
                    "type": "integer"
                },
                "level_id": {
                    "type": "integer"
                },
                "city_id": {
                    "type": "integer"
                }
            }
        }
    }
}
